@model List<DiaryEntry>

<div class="container">
    <div class="row pt-4">
        <div class="col-md-12">
            <p>
                <a href="@Url.Action("Create", "DiaryEntries")" class="btn btn-primary">Create New Entry</a>
            </p>
        </div>



    <div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        <tbody>  
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-small">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-controller="DiaryEntries" asp-route-id="@entry.Id" class="btn btn-danger btn-small">
                            Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table>
</div>